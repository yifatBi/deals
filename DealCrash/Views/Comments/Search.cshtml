@model IEnumerable<DealCrash.Models.Comment>

@{
    ViewBag.Title = "Search";
}
@Html.Partial("~/Views/Comments/SearchPartial.cshtml")

<hr />
@if (Model.Count() == 0)
{
    <h3> No Comments found in search. </h3>
}
else
{
    <h2>Search</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.deal.title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.user.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.createdDate)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.deal.title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.user.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.createdDate)
                </td>

            </tr>
        }

    </table>
}
